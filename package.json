{
  "name": "simple-blog",
  "scripts": {
    "start": "concurrently --kill-others \"npm run serve\" \"npm run css\"",
    "serve": "eleventy --serve",
    "css": "postcss ./src/styles/index.css -o ./dist/index.css -w",
    "build": "rm -rf dist && eleventy && postcss ./src/styles/index.css -o ./dist/index.css",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false && npm install && npm run build"
  },
  "author": "NightWandeder2004",
  "license": "ISC",
  "devDependencies": {
    "@11ty/eleventy": "^1.0.1",
    "autoprefixer": "^10.4.7",
    "concurrently": "^7.2.0",
    "postcss": "^8.4.13",
    "postcss-cli": "^9.1.0",
    "postcss-import": "^14.1.0",
    "tailwindcss": "^3.0.24"
  },
  "dependencies": {
    "dotenv": "^16.0.1",
    "express": "^4.18.1"
  }
}
