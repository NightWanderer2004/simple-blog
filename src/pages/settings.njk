<h1 class="title">{{ pageTitle }}</h1>
<h3 class="settingsTitle">Основной цвет:</h3>
<ul class="colorsButtons">
   {% for color in colors %}
   <button class="colorsButton primary {{ color }}"></button>
   {% endfor %}
</ul>
<h3 class="settingsTitle">Второстепенный цвет:</h3>
<ul class="colorsButtons">
   {% for color in colors %}
   <button class="colorsButton secondary {{ color }}"></button>
   {% endfor %}
</ul>
<h3 class="settingsTitle">Тёмная тема:</h3>
<div class="darktheme__container">
   <input type="checkbox" class="darktheme" />
   <p class="darktheme__info">Выкл</p>
</div>
